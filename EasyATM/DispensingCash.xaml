<Page x:Class="EasyATM.DispensingCash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
       d:DesignWidth="1100" d:DesignHeight="750"
	Title="DispensingCash">



    <Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF23A016" Offset="0.364"/>
                <GradientStop Color="#FFB2F1AF" Offset="1"/>
                <GradientStop Color="#FF23A016" Offset="0.04"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Content="Dispensing Cash..." HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontFamily="Segoe UI Black" FontSize="48"/>

        <Button Content="Human Action: TAKE CASH " Click="ButtonHumanAction_Click" Margin="0,0,0,10" Background="#FFFF52B8" Width="362" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="22" FontFamily="Segoe UI Black">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Page>
